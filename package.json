{
  "name": "bddly",
  "version": "1.1.3",
  "description": "A nice Behaviour Driven Development testing framework for Jest",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"No test specified\"",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iwhite90/bddly.git"
  },
  "keywords": [
    "BDD",
    "Behaviour",
    "Testing"
  ],
  "author": "Ian White",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iwhite90/bddly/issues"
  },
  "homepage": "https://github.com/iwhite90/bddly#readme",
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "lib/**/*"
  ]
}
